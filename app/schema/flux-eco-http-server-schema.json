{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fluxlabs.ch/flux-eco/flux-eco-http-server.json",
  "type": "object",
  "properties": {
    "serverSettings": {
      "$ref": "#/definitions/serverSettings"
    },
    "policies": {
      "$ref": "#/definitions/policies"
    },
    "static": {
      "$ref": "#/definitions/static"
    },
    "middlewares": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/middlewares"
      }
    },
    "actions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/actions"
      }
    }
  },
  "required": [
    "server"
  ],
  "definitions": {
    "serverSettings": {
      "type": "object",
      "properties": {
        "port": {
          "type": "string"
        },
        "host": {
          "type": "string"
        }
      },
      "required": [
        "port",
        "host"
      ]
    },
    "policies": {
      "type": "object",
      "properties": {
        "requiredHeaders": {
          "type": "string"
        },
        "allowedHeaders": {
          "type": "string"
        },
        "allowedIps": {
          "type": "string"
        }
      }
    },
    "middlewares": {
      "type": "string",
      "enum": [
        "ActionMiddleware",
        "BackendProxyMiddleware",
        "ConfigMiddleware",
        "ErrorHandlingMiddleware",
        "LoggerMiddleware",
        "LoggingMiddleware",
        "CheckPoliciesMiddleware",
        "RequestContentLoggerMiddleware",
        "ResponseContentLoggerMiddleware",
        "ServerMiddleware",
        "StaticFileMiddleware"
      ]
    },
    "actions": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string"
        },
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "policies": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "object",
              "additionalProperties": {}
            }
          ]
        },
        "handlerType": {
          "type": "string",
          "enum": [
            "callable",
            "httpRequest"
            ]
        }
      },
      "required": [
        "path",
        "method",
        "handlerType"
      ]
    },
    "static": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "method": {
          "type": "string",
          "enum": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "path": {
          "type": "string"
        },
        "response": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "string",
                "number",
                "object",
                "array"
              ]
            }
          },
          "required": [
            "type"
          ]
        }
      },
      "required": [
        "name",
        "method",
        "path",
        "response"
      ]
    }
  }
}