{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://fluxlabs.ch/flux-eco/flux-eco-http-server.json",
  "type": "object",
  "properties": {
    "server": {
      "type": "object",
      "properties": {
        "port": {
          "type": "string"
        },
        "host": {
          "type": "string"
        }
      },
      "required": [
        "port",
        "host"
      ]
    },
    "policies": {
      "type": [
        "object",
        "null"
      ],
      "patternProperties": {
        ".+": {
          "policy": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              },
              "requiredHeaders": {
                "type": "string"
              },
              "allowedHeaders": {
                "type": "string"
              },
              "allowedIps": {
                "type": "string"
              }
            },
            "required": [
              "path"
            ],
            "additionalProperties": false
          }
        }
      }
    },
    "staticFiles": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "path": {
          "type": "string"
        }
      },
      "required": [
        "path"
      ]
    },
    "actions": {
      "type": "object",
      "patternProperties": {
        ".+": {
          "action": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "path": {
                "type": "string"
              },
              "method": {
                "type": "string",
                "enum": [
                  "GET",
                  "POST",
                  "PUT",
                  "DELETE"
                ]
              }
            },
            "required": [
              "name",
              "path",
              "method"
            ]
          }
        }
      }
    }
  },
  "required": [
    "server","policies","staticFiles","actions"
  ]
}
